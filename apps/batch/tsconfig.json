{
  "compilerOptions": {
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "extends": ["@tsconfig/strictest/tsconfig"],
  "include": [".nitro/types/**/*.ts", "**/*.ts", "server/**/*.ts"]
}
