{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>inabagumi/renovate-config"],
  "packageRules": [
    {
      "groupName": "tailwindcss monorepo",
      "ignoreUnstable": false,
      "matchManagers": ["npm"],
      "matchPackageNames": ["@tailwindcss/**", "tailwindcss"]
    },
    {
      "description": "Require manual approval for Kong major version upgrades via Dependency Dashboard",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["kong"],
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    }
  ],
  "reviewers": ["ykzts"]
}
